{
  "manifest_version": 2,
  "name": "SyncText",
  "description": "Allows you to copy text from one Chrome to another easily.",
  "version": "1.0",

  "background": {
    "scripts": ["jquery-2.1.3.min.js", "background.js"]
  },

  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "css": ["synctext.css"],
    "js": ["jquery-2.1.3.min.js"]
  }],

  "browser_action": {
    "default_icon": "icon.png"
  },
  
  "permissions": ["https://*/*", "http://*/*", "storage", "tabs"]
}